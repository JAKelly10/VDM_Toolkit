module TestV2IFcnsRecursiveNat
exports all
definitions

functions
	g: nat -> nat
	g(x) == if x = 0 then 10 else g(x-1)+x
	measure x;

	f: set of nat -> nat
	f(s) == if s = {} then 0 else let x in set s in f(s \ {x}) + x
	measure card s;

	f': set of nat -> nat
	f'(s) == 
		cases s:
			{} -> 0,
			{x} union xs -> x + f'(xs)
		end
	measure card s;

					
end TestV2IFcnsRecursiveNat