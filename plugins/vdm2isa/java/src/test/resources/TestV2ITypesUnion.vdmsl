module TestV2ITypesUnion
exports all
definitions

types

	TQuoteUnion = <A> | <B> | <C>;
	
	--@NB VDM merges these two? i.e. widens to largest possible types?
	TBasicUnion = nat | int;

	TBasicQuoteUnion = TBasicUnion | TQuoteUnion; 
	
functions

	f1: TQuoteUnion -> bool
	f1(qu) == qu <> <A>;

	f2: TBasicUnion -> int
	f2(bu) == bu;
	
	f2': TBasicUnion -> [nat]
	f2'(bu) == if is_nat(bu) then bu else nil;
	

end TestV2ITypesUnion

