module TestV2IFcns
exports all
definitions

functions

	const: () -> nat
	const() == 10
	-- testing linient post pre calls for constant functions! 
	pre true
	post true;

	f: nat * nat1 -> nat1
	f(x, y) == x + y;
	
	g: nat * nat1 -> nat1
	g(x, y) == x + y
	pre x > 10
	post x < RESULT;

	h: nat -> nat
	h(x) == g(x, x)
	pre pre_g(x, x) and x < 20
	post post_g(x, x, RESULT) and x > 20;
	
	curried: nat -> nat -> nat
	curried(x)(y) == x + y
	post
		x < RESULT and y < RESULT;

end TestV2IFcns